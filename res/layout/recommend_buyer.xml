<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <!-- Include Header -->
    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/actionbar_layout" />
  
    <!-- Rekomendasi Buyer -->
<TextView
    android:id="@+id/lbl_recommend"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:text="Rekomendasi"
    android:textSize="20sp"
    android:textStyle="bold"
    android:textColor="#a30046"
    ></TextView>

<!-- pertanyaan 1 -->
<TextView
    android:id="@+id/rec_quest1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:text="Apakah anda puas dengan transaksi ini?"
    ></TextView>

<!-- pilihan ya/tidak -->
<RadioGroup
    android:id="@+id/panel_radiobtn"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="10dp"
    android:orientation="horizontal"
 >
 
    <!-- ya -->
<RadioButton
    android:id="@+id/radio_yes"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="20dp"
    android:text="Yes"
    
    ></RadioButton>
  
<!-- tidak -->
<RadioButton
    android:id="@+id/radio_no"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:text="No" 
    ></RadioButton>
</RadioGroup>
    
<!-- label rekomendasi untuk pembeli -->
<TextView
    android:id="@+id/rec_quest2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:text="Rekomendasi untuk pembeli"
    ></TextView>

<!-- isian rekomendasi -->
<EditText
    android:id="@+id/txtfield_rekomendasi"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="10dp"
    android:gravity="top"
    android:singleLine="false"
    android:lines="5"
    android:hint="tulis rekomendasi di sini" />

<!-- panel tombol -->
<LinearLayout
    android:id="@+id/panel_btnrec"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    >
    
    <!-- tombol submit -->
    <Button
        android:id="@+id/btn_kirimrekomendasi"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/list_selector"
        android:text="Kirim"
         ></Button>
    
      <!-- tombol batal -->
    <Button
        android:id="@+id/btn_batalrekomendasi"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/list_selector"
        android:text="Batal"
         ></Button>
    
</LinearLayout>
</LinearLayout>